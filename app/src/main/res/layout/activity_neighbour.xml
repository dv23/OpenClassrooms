<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_width="50dp"-->
    tools:context=".ui.neighbour_list.DetailNeighbourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btAcceuil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/back"
            app:fabSize="auto"
            app:rippleColor="#9FA8DA"></android.support.design.widget.FloatingActionButton>

        <ImageView
            android:id="@+id/n_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
            android:contentDescription="@string/app_name"
            app:layout_constraintVertical_bias="0.063" />

        <ImageButton
            android:id="@+id/n_star"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:enabled="false"
            android:src="@drawable/ic_star_white_24dp" />

        <TextView
            android:id="@+id/n_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="@id/n_avatar"
            app:layout_constraintStart_toStartOf="@id/n_avatar" />

        <TextView
            android:id="@+id/n_aboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="@id/n_name"
            app:layout_constraintStart_toStartOf="@id/n_name" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>